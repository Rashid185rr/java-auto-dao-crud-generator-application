     public void setTableInTab(Table1[] table){
         
         for(Table1 t:table){
        
             if(table!=null){
             getColumnList(t);
            }
         }
     }
     
     public List<String> getColumnList(Table1 table){
         List<String> list=new ArrayList<>();
         
         
         return list;
     }
     
